{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":disableDependencyDashboard",
    ],
    "labels": ["dependencies", "renovate"],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "matchManagers": ["github-actions", "npm", "gradle"],
            "groupName": "{{manager}}"
        },
        {
            "matchUpdateTypes": ["patch"],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        }
    ]
}